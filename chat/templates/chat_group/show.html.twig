{% extends 'base.html.twig' %}

{% block title %}ChatGroup{% endblock %}

{% block body %}
    <h1>ChatGroup</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chat_group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ chat_group.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_chat_group_index') }}">back to list</a>

    <a href="{{ path('app_chat_group_edit', {'id': chat_group.id}) }}">edit</a>

    {% for message in messages %}
    <div class="alert alert-info" role="alert">
        <tr>
            <td><strong>{{ message.user.username }}: </strong> &nbsp;&nbsp;</td>
            <td>{{ message.text }} &nbsp;&nbsp;</td>
            <td>{{ message.date ? message.date|date('Y-m-d H:i') : '' }} &nbsp;&nbsp;</td>        
        </tr>
    </div>
    {% endfor %}

    {{ include('chat_group/_delete_form.html.twig') }}
{% endblock %}
