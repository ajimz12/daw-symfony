{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <h1>{{group.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ group.name }}</td>
            </tr>
        </tbody>
    </table>

    <form method="post" action="{{ path('app_group_invite', {id: group.id}) }}">
    <label for="user">Invitar Usuario:</label>
    <select name="user_id">
        {% for user in users %}
            <option value="{{ user.id }}">{{ user.username }}</option>
        {% endfor %}
    </select>
    <button type="submit">Invitar</button>
</form>




    <a href="{{ path('app_main') }}">Volver al inicio</a>
{% endblock %}
